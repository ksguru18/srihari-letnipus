    <build>
        <plugins>
            <!-- copy prereq dependencies to the target folder -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.intel.mtwilson</groupId>
                                    <artifactId>mtwilson-service-tools-zip</artifactId>
                                    <version>1.1</version>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <destFileName>mtwilson-service-tools-zip.zip</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.intel.mtwilson</groupId>
                        <artifactId>mtwilson-service-tools-zip</artifactId>
                        <version>1.1</version>
                        <type>zip</type>
                    </dependency>
                </dependencies>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unzip-mtwilson-service-tools</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <mkdir dir="${project.build.directory}/dist-zip"/>
                                <unzip dest="${project.build.directory}/dist-zip">
                                    <fileset dir="${project.build.directory}">
                                        <include name="mtwilson-service-tools-zip.zip"/>
                                    </fileset>
                                </unzip>
                                
                                <mkdir dir="${project.build.directory}/application/share"/>
                                <unzip dest="${project.build.directory}/application/share">
                                    <fileset dir="${project.build.directory}/dist-zip">
                                        <include name="**/*.zip"/>
                                    </fileset>
                                </unzip>
                                
                                <mkdir dir="${project.build.directory}/application/bin"/>
                                
                                <!-- permissions -->
                                <chmod perm="700">
                                    <fileset dir="${project.build.directory}/application">
                                        <include name="**/bin/*"/>
                                        <include name="**/sbin/*"/>
                                    </fileset>
                                </chmod>
                            </target>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.ant</groupId>
                        <artifactId>ant</artifactId>
                        <version>1.8.4</version>
                    </dependency>
                    <dependency>
                        <groupId>ant-contrib</groupId>
                        <artifactId>ant-contrib</artifactId>
                        <version>1.0b3</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
    
